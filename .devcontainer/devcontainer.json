{
  "name": "Streamlit World Cup App",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylint"
      ]
    }
  },
  "forwardPorts": [8501],
  "postCreateCommand": "pip install -r requirements.txt",
  "portsAttributes": {
    "8501": {
      "label": "Streamlit Preview",
      "onAutoForward": "openPreview"
    }
  }
}
